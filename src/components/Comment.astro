---
import type { Comment } from "../comments";

interface Props {
  comment: Comment;
}
const { comment } = Astro.props;
---

<div class="comment border bg-gray-200 p-1 my-2">
  <div>{comment.text}</div>
  <div class="relative">{comment.author} - {comment.date.toLocaleString("no", {timeZone: "utc"})}
    <button
      hx-delete={"/api/comments/" + comment.id}
      hx-target="closest .comment"
      hx-swap="outerHTML"
      class="bg-red-400 rounded right-1 absolute"
    >
    Delete
    </button>
  </div>
</div>
